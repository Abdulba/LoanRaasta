@{
    ViewBag.Title = "Loan Raasta";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<div class="container contentarea" ng-app="LoanBazaarApp" ng-controller="ApplyLoanCtrl">
    <div class="row">
        <!-- left start -->
        <div class="col-md-9 col-sm-9 contenttext">
            <h2>Apply For Loan</h2>
            <div class="col-md-9 col-sm-9 col-xs-12">
                <form>
                    <div class="form-group">
                        <label for="txtCustomerName">Name</label>
                        <input type="text" class="form-control" id="txtCustomerName" ng-model="CustomerName" placeholder="Name">                        
                    </div>
                    <div class="form-group">
                        <label for="txtMobile">Contact Number</label>
                        <input type="text" class="form-control" id="txtMobile" ng-model="Mobile" placeholder="Contact Number">                       
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email address</label>
                        <input type="email" class="form-control" id="txtEmail" placeholder="Email" ng-model="Email">                        
                    </div>
                    <div class="form-group">
                        <label for="txtLoanType">Type of Loan</label>
                        <input type="text" class="form-control" id="txtLoanType" placeholder="Loan Type" ng-model="LoanType">                        
                    </div>
                    <div class="form-group">
                        <label for="txtLoanAmount">Required Loan Amount</label>
                        <input type="text" class="form-control" id="txtLoanAmount" placeholder="Loan Amount" ng-model="LoanAmount">                        
                    </div>

                    <div class="form-group">
                        <label for="selEmployment">Type of Employment : </label>
                        <select id="selEmployment" class="form-control" ng-model="EmploymentType">
                            <option>Salaried</option>
                            <option>Self Employed</option>
                        </select>                        
                    </div>

                    <div class="form-group">
                        <label for="txtOraganization">Organization</label>
                        <input type="text" class="form-control" id="txtLoanAmount" placeholder="Organization" ng-model="Organization"> 
                    </div>
                    
                    <div class="form-group">
                        <label for="txtIncome">Monthly Income</label>
                        <input type="text" class="form-control" id="txtIncome" placeholder="Monthly Income" ng-model="Income">
                    </div>

                    <div class="form-group">
                        <label for="selBalanceTopup">Balance Transfer and Topup?</label>
                        <select id="selBalanceTopup" class="form-control" ng-model="BalanceTransferAndTopup">
                            <option value="false" selected="selected">No</option>
                            <option value="true">Yes</option>
                        </select>
                    </div>

                    <div class="form-group topup">
                        <label for="txtOutstanding">Total Outstanding</label>
                        <input type="text" class="form-control" id="txtOutstanding" placeholder="Outstanding" ng-model="Outstanding">
                    </div>

                    <div class="form-group topup">
                        <label for="txtOutstanding">How Long?</label>
                        <input type="text" class="form-control" id="txtHowLong" placeholder="How Long" ng-model="EMILong">
                    </div>

                    <div class="form-group topup">
                        <label for="txtEMI">EMI Amount</label>
                        <input type="text" class="form-control" id="txtEMI" placeholder="How Long" ng-model="EMIAmount">
                    </div>

                    <div class="form-group topup">
                        <label for="selEMIBounces">Any EMI bounces?</label>
                        <select id="selEMIBounces" class="form-control" ng-model="AnyBounces">
                            <option>Yes</option>
                            <option>No</option>
                        </select>
                    </div>

                    <div class="form-group topup">
                        <label for="txtTopup">Top up Amount</label>
                        <input type="text" class="form-control" id="txtTopup" placeholder="Topup Amount" ng-model="TopupAmount">
                    </div>
                    <button id="btnApplyLoan" class="btn btn-lg btn-success" ng-click="applyloan()">Apply</button>@*type="submit"*@
                </form>
            </div>
        </div>
        <!-- left start -->       
    </div>               
       
    <br />
    
</div>
<script>
    $('.topup').hide();

    $('#selBalanceTopup').change(function () {
        var selectedTopupValue = $(this).val();

        if(selectedTopupValue == 'true')
        {
            $('.topup').show();
        }
        else
        {
            $('.topup').hide();
        }
    });
</script>
